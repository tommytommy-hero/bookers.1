<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
     <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book, method: :delete, data: { confirm: 'Are you sure?'} %></td>
     </tr>
    <% end %>
   </tbody>
</table>

<h2>New book</h2>
<div class="error-box">
 <% if @book.errors.any? %>
  <div class="error-message"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <div class="error-type">
   <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>
   </ul>
  </div>
 <% end %>
</div>

<div class="list-wrap">
<%= form_with model:@book do |f| %>
 <div class="input input-error">
  <label for="text">Title</label>
 </div>
 <div class="input input-error">
   <%= f.text_field :title %>
 </div>
 
 <div class="input input-error">
  <label fot="text">Body</label>
 </div>
 <div class="input input-error">
   <%= f.text_area :body %>
 </div>

 <%= f.submit 'Create Book' %>
</div>
<% end %>